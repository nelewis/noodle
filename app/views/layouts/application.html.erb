<!DOCTYPE html>
<html>
<head>
  <%= favicon_link_tag 'favicon_eye.ico' %>
  <title> digital Mum</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
<div class="navbar navbar-fixed-top">
	<div class="navbar-inner">
		<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
			<span class="icon-bar"></span>
		</a>
		<a class="brand" href="#">digitalMum</a>
		<div class="nav-collapse">
			<ul class="nav">
				<li><%= link_to "Mum", "/base" %></li>
				<li><%= link_to "Folks", "/friends" %></li>
				<li><%= link_to "Days to remember", "/months" %></li>
				<li><%= link_to "Galleries", "/galleries" %></li>
			</ul>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="span12">
		<% flash.each do |key, value| %>
		  <div class='flash' id='<%= key %>'>
		    <%= value %>
		  </div>
		<% end %>
		<p><%= yield %></p>
		</div>
	</div>
</div>
</body>
</html>
