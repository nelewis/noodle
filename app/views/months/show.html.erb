<%- model_class = Month -%>
<div class="page-header">
  <h3><%=t '.title', :default => model_class.model_name.human %></h3>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @month.name %></dd>
</dl>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= Friend.human_attribute_name(:id) %></th>
      <th><%= Friend.human_attribute_name(:name) %></th>
      <th><%= Friend.human_attribute_name(:dob) %></th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= link_to friend.id, friend_path(friend) %></td>
        <td><%= friend.name %></td>
        <td><%= friend.dob %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              months_path, :class => 'btn btn-primary' %>
</div>
