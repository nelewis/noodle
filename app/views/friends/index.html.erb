<%- model_class = Friend -%>
<div class="page-header">
  <h3 small><%=t '.title', :default => "We are here" %></h3>
</div>

<table class="table table-striped">
  <br/>
  <%= gmaps4rails(@pins) %>
  <%= yield :scripts %>

  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:dob) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:picture) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= link_to friend.id, friend_path(friend) %></td>
        <td><%= friend.name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.dob %></td>
        <td><%= friend.address %></td>
        <td><%= image_tag(friend.picture_url, :width => 40) if friend.picture.present? %></td>
        <td>
          <div class="btn-group">
            <a class="btn btn-primary" href="#">
              <i class="icon-user icon-white"></i> Pick </a>
            <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">
              <span class="caret"> </span></a>
              <ul class="dropdown-menu">
                <li><%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_friend_path(friend), :class => 'icon-pencil' %></li>
                <li><%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      friend_path(friend),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'icon-trash' %></li>
                    </ul>
          </div>
          <!-- <%= link_to t(' .edit', :default => t("helpers.links.edit")), 
                      edit_friend_path(friend), :class => 'icon-pencil' %> 
          <%= link_to t(' .destroy', :default => t("helpers.links.destroy")),
                      friend_path(friend),
                          :method => :delete, 
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm",
                          :default => 'Are you sure?')) }, 
                          :class => 'icon-trash btn btn-danger' %> //-->
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_friend_path,
            :class => 'btn btn-primary' %>
