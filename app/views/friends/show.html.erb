<%- model_class = Friend -%>
<div class="page-header">
  <h4>Here is... <em><%= @friend.name %></em></h4>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:picture) %></strong></dt>
  <dd><%= image_tag(@friend.picture_url, :width => 90) %></dd>
  <dt><strong>Date of birth:</strong></dt>
  <dd><%= @friend.dob %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %></strong></dt>
  <dd><%= @friend.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %></strong></dt>
  <dd><%= @friend.email %></dd>
    <dt><strong><%= model_class.human_attribute_name(:latitude) %></strong></dt>
  <dd><%= @friend.latitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:longitude) %></strong></dt>
  <dd><%= @friend.longitude %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              friends_path, :class => 'btn btn-primary' %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_friend_path(@friend), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              friend_path(@friend),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'You clicked on delete. Are you sure you want to delete this person?')) },
              :class => 'btn btn-danger' %>
</div>
